@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/ca1.jpg" alt="Carousel 1" style="width:100%;height:360px">
                <div class="carousel-caption ">
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/ca2.jpg" alt="Carousel 2" style="width:100%;height:360px">
                <div class="carousel-caption">
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/ca7.jpg" alt="Carousel 3" style="width:100%;height:360px">
                <div class="carousel-caption">
                    <h3 style="color:whitesmoke;font-family:'Monotype Corsiva';font-weight:700;text-align:right">Various Collections For Kids</h3>
                </div>
            </div>
        </div>


        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div>
        <button type="button" class="btn btn-dark rounded-sm" style="margin:50px;text-align:center;margin-left:490px" onclick="location.href='@Url.Action("Index", "OnlineStore")'">SHOP NOW</button>
    </div>
</div>

